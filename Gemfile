# A sample Gemfile
source "https://rubygems.org"

gem 'nanoc'

# nanoc plugins
gem 'nanoc-toolbox'
gem 'typogruby'

# js/css minify
gem 'rainpress'
gem 'uglifier'

# busting web browser's cache when js/css file changes.
gem 'nanoc-cachebuster'

# basic requirement
gem 'adsf'

# require by Nanoc::Helpers::XMLSitemap
gem 'builder'

# for nanoc check sub command
gem 'nokogiri'
gem 'w3c_validators'

# debugging
group :development do
  gem 'pry'
  gem 'pry-byebug'
  gem 'guard-nanoc'
end
